<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="10dp">


    <!-- Header: Month -->
    <TextView
        android:id="@+id/widget_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="December 2025"
        android:textColor="#90A4AE"
        android:textSize="13sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"/>

    <!-- Balance Section (Top Right) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="#29B6F6"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"/>
        <TextView
            android:id="@+id/widget_balance_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Grid for Income & Expense -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_month_text"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:weightSum="2"
        android:baselineAligned="false">

        <!-- Income Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_card_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INCOME"
                android:textColor="#81C784"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>
            <TextView
                android:id="@+id/widget_income_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textColor="#E0E0E0"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Expense Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/widget_card_background"
            android:paddingVertical="10dp"
            android:paddingHorizontal="12dp"
            android:layout_marginStart="6dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPENSE"
                android:textColor="#E57373"
                android:textSize="10sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"/>
            <TextView
                android:id="@+id/widget_expense_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textColor="#E0E0E0"
                android:textSize="15sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Add Button (Bottom) -->
    <Button
        android:id="@+id/widget_add_button"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/widget_button_background"
        android:text="+ Add Transaction"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:textSize="12sp"
        android:stateListAnimator="@null"/>

</RelativeLayout>
